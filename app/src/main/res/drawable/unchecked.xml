<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:innerRadius="10dp" android:shape="ring" android:thicknessRatio="5" android:useLevel="false">
            <size android:width="5dp" android:height="15dp" />
            <stroke android:width="4dp" android:color="#666666" />
            <gradient android:angle="180" android:startColor="@color/buttonColor" />
        </shape>
    </item>
</selector>