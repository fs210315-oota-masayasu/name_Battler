<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="@string/name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_job"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="end"
            android:layout_weight="0.3"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/job"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_status_hp"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/hp" />

        <TextView
            android:id="@+id/txt_status_mp"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/mp" />

        <TextView
            android:id="@+id/txt_status_str"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|start"
            android:gravity="center"
            android:text="@string/str" />

        <TextView
            android:id="@+id/txt_status_def"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|start"
            android:gravity="center"
            android:text="@string/def" />

        <TextView
            android:id="@+id/txt_status_agi"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|start"
            android:gravity="center"
            android:text="@string/agi" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_hidden"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>