<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="キャラクター名" />

        <TextView
            android:id="@+id/txt_job"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:layout_weight="0.3"
            android:gravity="center_horizontal|center_vertical"
            android:text="職業名" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_status_hp"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="HP" />

        <TextView
            android:id="@+id/txt_status_mp"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="MP" />

        <TextView
            android:id="@+id/txt_status_str"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:gravity="center"
            android:text="STR" />

        <TextView
            android:id="@+id/txt_status_def"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:gravity="center"
            android:text="DEF" />

        <TextView
            android:id="@+id/txt_status_agi"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:gravity="center"
            android:text="AGI" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_hidden"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="invisible" />

</FrameLayout>