                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_first_player_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_first_player_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_first_player_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_player"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/righit_vertical_line_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_second_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView_1"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_second_player_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView_2"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_second_player_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView_3"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_second_player_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_player"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_third_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView_1"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_third_player_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView_5"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_third_player_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView_6"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txt_third_player_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>